<html>
	<head>
		<title>Sinatra Framework</title>
		<link rel="stylesheet" type="text/css" href="css/application.css">
	</head>
	<body>
		<% if current_user %>
		<p><%= "You are now logged in as #{@user.username}" %></p>
		<% end %>
		<div class="nav-bar">
		<ul class="nav-bar-ul">
			<li class="nav-bar-img"><img src="img/quora_logo.png"></li>
			<input class="search-input" type="text">
			<li class="search">Search</li>
			<li class="nav-bar-item">Index</li>
			<li class="nav-bar-item">Profile</li>
		</ul>
		</div>

		<div class="center">
		<%= yield %>
		</div>

		<% if logged_in? %>
			<p><a href="/logout">Log Out</p></a>
		<% end %>
	</body>
</html>